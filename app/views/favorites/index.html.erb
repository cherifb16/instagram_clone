<h1>Favorites</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Post</th>
      <th>image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
      <% if user_signed_in?%>

      <%if favorite.user_id == current_user.id %>
        <td><%= favorite.post.user.email%></td>
        <td><%= favorite.post.content%></td>
        <td><%= image_tag favorite.post.image.url,style:"width:100px%" %></td><br><br>
       
      
    <% end %>
    <% end %>
    </tr>
    
    <% end %>
  </tbody>
</table>

